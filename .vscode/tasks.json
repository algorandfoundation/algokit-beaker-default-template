{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run template using algokit",
      "command": "algokit",
      "args": [
        "-v",
        "init",
        "--name",
        "test_output",
        "--no-git",
        "--defaults",
        "--accept-template-url",
        "--template-url",
        "${workspaceFolder}",
      ],
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["Delete test_output folder"]
    },
    
    {
      "label": "Delete test_output folder",
      "command": "rm",
      "args": [
        "-rf",
        "test_output"
      ],
      "type": "shell",
      "windows": {
        "command": "./clear.ps1"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
